{
  "name": "typescript-template",
  "version": "1.2.0",
  "description": "This is a template for TypeScript related projects.",
  "main": "dist/index.js",
  "repository": "https://github.com/bmacher/typescript-template.git",
  "author": "Benjamin Macher",
  "license": "MIT",
  "scripts": {
    "postinstall": "ts-node scripts/npm-post-install-hook.ts",
    "start": "ts-node src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "test:coverage": "npm run test:clean && jest --coverage",
    "test:clean": "rm -rf coverage"
  },
  "devDependencies": {
    "@jest/globals": "^27.0.3",
    "@types/eslint": "^7.2.13",
    "@types/node": "^15.12.2",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chalk": "^4.1.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
