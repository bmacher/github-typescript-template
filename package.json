{
  "name": "typescript-template",
  "version": "1.2.0",
  "description": "This is a template for TypeScript related projects.",
  "main": "dist/index.js",
  "repository": "https://github.com/bmacher/typescript-template.git",
  "author": "Benjamin Macher",
  "license": "MIT",
  "scripts": {
    "postinstall": "ts-node scripts/npm-post-install-hook.ts",
    "start": "ts-node src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "test:coverage": "npm run test:clean && jest --coverage",
    "test:clean": "rm -rf coverage"
  },
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "@types/node": "^14.14.26",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/parser": "^4.15.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
